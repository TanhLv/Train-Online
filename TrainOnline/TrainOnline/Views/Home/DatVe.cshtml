<body>
	<div class="container">
		<div class="row">
			@foreach (var item in query)
			{
				<div class="col-md-6">
					<div class="customer-card">
						<div class="card-body">
							<h5>Tên khách hàng: @item.Key.Name</h5>
							<h5>Mã vé: @item.Key.TicketCode</h5>
							<h5>Tổng giá vé: @item.Key.TotalTicketPrice</h5>
							<h5>Thời gian đi: @item.Key.GioDi</h5>
							<h5>Thời gian đến: @item.Key.GioDen</h5>
							<h5>Lộ trình:</h5>
							<ul>
								@foreach (var lt in item.DatVe)
								{
									<li>@lt.DepartureStation - @lt.ArrivalStation</li>
								}
							</ul>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
</body>
